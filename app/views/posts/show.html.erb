<h1>Neogram</h1>

<article class="post">
  <p><%= @post.username %></p>
  <p><%= @post.formatted_time %></p>
  <%= image_tag  @post.image, class: @post.filter_class %>
  <% if @owner  %>
  <p>
    <%= link_to  "Edit", edit_post_path(@post) %>
    <%= link_to  "Delete", post_path(@post), 
        method: :delete, 
        data: { confirm: 'Are you sure? '} %>
  </p>
  <% end%>
</article>